datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:familia007@localhost:5432/db_vendas"
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    cpf       String   @unique
    phone     String
    password  String
    typeUser  Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

generator client {
    provider = "prisma-client-js"
}
